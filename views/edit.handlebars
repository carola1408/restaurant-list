<form action="/restaurants/{{restaurant_id}}?_method=PUT" method="POST">
  <h1 class="mb-1 restaurant-show-title">
    <input type="text" name="name" value="{{restaurant.name}}">
  </h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" name="category" value=" {{restaurants.category}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            評價：
          </span>
          <input type="text" name="rating" value=" {{restaurants.rating}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" name="location" value="{{restaurants.location}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" name="phone" value=" {{restaurants.phone}}">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            Google_Map：
          </span>
          <input type="text" name="google_map" value=" {{restaurants.google_map}}">
        </p>
        <p class="mb-5">
          <input type="text" name="description" value=" {{restaurants.description}}">
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurants.image}}" alt="{{restaurants.name}}"
          style="max-width: 600px;">
        <button type="submit" class="btn btn-major ">Save</button>
        <a href="/" class="btn btn-secondary ">back</a>
      </div>
    </div>
  </div>
</form>